{
  "private": true,
  "name": "app-frontend",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "preact": "latest",
    "preact-render-to-string": "latest",
    "preact-router": "latest",
    "sass": "latest",
    "storeon": "latest",
    "storeon-substore": "latest",
    "webpack": "5.56"
  },
  "devDependencies": {
    "@types/enzyme": "latest",
    "@types/jest": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-plugin-import": "latest",
    "enzyme": "latest",
    "enzyme-adapter-preact-pure": "latest",
    "eslint": "latest",
    "eslint-config-preact": "latest",
    "jest": "latest",
    "jest-preset-preact": "latest",
    "sirv-cli": "latest",
    "typescript": "latest"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
